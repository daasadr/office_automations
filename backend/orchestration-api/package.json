{
  "name": "odpady-orchestration-api",
  "version": "1.0.0",
  "description": "Orchestration API for document processing workflows",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:worker:pdf": "node dist/workers/pdfWorkflowWorker.js",
    "start:worker:llm": "node dist/workers/pageLlmWorker.js",
    "start:worker:erp": "node dist/workers/erpSyncWorker.js",
    "dev": "tsx watch src/index.ts",
    "dev:worker:pdf": "tsx watch src/workers/pdfWorkflowWorker.ts",
    "dev:worker:llm": "tsx watch src/workers/pageLlmWorker.ts",
    "dev:worker:erp": "tsx watch src/workers/erpSyncWorker.ts",
    "test": "jest",
    "generate-openapi": "tsx scripts/generate-openapi.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@directus/sdk": "^20.1.0",
    "@google/generative-ai": "^0.2.1",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "bullmq": "^5.34.8",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/exceljs": "^0.5.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
