{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@orchestration-api/config": ["./src/config"],
      "@orchestration-api/lib/*": ["./src/lib/*"],
      "@orchestration-api/middleware/*": ["./src/middleware/*"],
      "@orchestration-api/routes/*": ["./src/routes/*"],
      "@orchestration-api/services/*": ["./src/services/*"],
      "@orchestration-api/utils/*": ["./src/utils/*"],
      "@orchestration-api/llmResponseSchema": ["./src/llmResponseSchema"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "ts-node": {
    "esm": true
  }
}
