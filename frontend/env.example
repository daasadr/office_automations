# Directus Configuration
# For local development (without Docker):
DIRECTUS_URL=http://localhost:8055
# For Docker deployment (uncomment and use service name):
# DIRECTUS_URL=http://spur_odpady_-directus:8055

DIRECTUS_EMAIL=admin@example.com
DIRECTUS_PASSWORD=password
# OR use static token instead of email/password
DIRECTUS_TOKEN=your-static-token-here

# Application Configuration
NODE_ENV=development
PUBLIC_APP_NAME="File Processing App"

# For local development:
PUBLIC_APP_URL=http://localhost:4321
# For Docker deployment:
# PUBLIC_APP_URL=http://your-domain.com

# Base path for the frontend (e.g., "/app" or leave empty for root)
# This will be added to all URLs
PUBLIC_BASE_PATH=

# Orchestration API (for document processing)
# For local development (without Docker):
ORCHESTRATION_API_URL=http://localhost:3001
# For Docker deployment (uncomment and use service name):
# ORCHESTRATION_API_URL=http://spur_odpady_-orchestration-api:3001

# Project Configuration (for Docker)
PROJECT_PREFIX=spur_odpady_

# Security
SESSION_SECRET=your-session-secret-here

# File Processing
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/pdf
FILE_RETENTION_DAYS=30

# Optional: Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Sentry
SENTRY_AUTH_TOKEN=<TOKEN>
