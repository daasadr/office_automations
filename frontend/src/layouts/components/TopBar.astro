---
import { Home, Settings } from "lucide-react";
import "./top-bar.scss";
import { withBasePath } from "@/lib/utils";
---

<header class="top-bar">
  <div class="top-bar__container container mx-auto px-2 py-2">
    <!-- Home icon - returns to first step -->
    <a 
      href={withBasePath("/upload")}
      class="top-bar__icon"
      aria-label="Zpět na úvodní stránku"
      title="Domů"
    >
      <Home className="top-bar__icon-svg" />
      <span class="pl-2">Zpět</span>
    </a>

    <!-- Settings icon -->
    <a 
      href={withBasePath("/settings")}
      class="top-bar__icon"
      aria-label="Nastavení"
      title="Nastavení"
    >
      <Settings className="top-bar__icon-svg" />
    </a>
  </div>
</header>
