---
import UploadDocument from "@/components/FoundationDocumentsManager/UploadDocument";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { withBasePath } from "@/lib/utils";
---

<BaseLayout 
  title="Nahrát zakládající dokument" 
  description="Nahrajte nový zakládající dokument"
>
  <div class="max-w-6xl mx-auto py-8 px-4">
    <div class="mb-6">
      <a 
        href={withBasePath("/settings/foundation-documents")}
        class="text-sm text-muted-foreground hover:text-foreground inline-flex items-center gap-1"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Zpět na zakládající dokumenty
      </a>
    </div>
    <h1 class="text-3xl font-bold mb-2">Nahrát nový dokument</h1>
    <p class="text-muted-foreground mb-8">
      Nahrajte nový zakládající dokument pro augmentaci dat.
    </p>
    <UploadDocument client:load />
  </div>
</BaseLayout>






