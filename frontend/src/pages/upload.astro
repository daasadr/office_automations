---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { UploadForm } from "@/components/UploadForm/index";
import { NotificationPermissionBanner } from "@/components/NotificationPermissionBanner";
---

<BaseLayout title="Nahrání souboru" currentStep="upload">
  <div class="container mx-auto py-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold tracking-tight mb-4">Nahrání souboru</h1>
      <p class="text-lg text-muted-foreground">
        Vyberte soubor ke zpracování.
      </p>
    </div>
    
    <div class="w-full max-w-2xl mx-auto space-y-6">
      <NotificationPermissionBanner client:load />
      
      <div id="enhanced-upload">
        <UploadForm client:load />
      </div>
    </div>
  </div>
</BaseLayout>
